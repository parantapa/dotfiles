# Provide a local install space
export LOCAL="$HOME/local"
export MANPATH="$LOCAL/share/man:/usr/man:/usr/share/man:/usr/local/share/man"
export LD_LIBRARY_PATH="$LOCAL/lib"

export C_INCLUDE_PATH="$LOCAL/include"
export CPLUS_INCLUDE_PATH="$LOCAL/include"
export LIBRARY_PATH="$LOCAL/lib"
export PKG_CONFIG_PATH="$LOCAL/lib/pkgconfig"

if shopt -q login_shell ; then
    PATH="$LOCAL/bin:$PATH"
fi

export PYTHONUSERBASE="$LOCAL"

# Use virtualenvwrapper
#export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python2.7
export WORKON_HOME=$LOCAL/virtualenvs
. "$LOCAL/bin/virtualenvwrapper.sh"

# Enable virtualenvs by default only inside a non login shell
if ! shopt -q login_shell ; then
     workon default
fi

AUTOPATH="$HOME/.autopath.bash."`uname -s`
if [ -f "$AUTOPATH" ] ; then
    . "$AUTOPATH"
fi

# Sql shortcuts
alias psql-00media2="psql -h postgresql00 -U twitter_media2 -d twitter_media2"
alias psql-00data="psql -h postgresql00 -U twitter_data -d twitter_data"
alias psql-01media="psql -h postgresql01 -U twitter_media -d twitter_media"
