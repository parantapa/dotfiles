assign [class="Skype"] 9
assign [class="Xchat"] 9

bindsym Control+Mod1+period exec --no-startup-id "sound-ctrl incvol ; killall -USR1 i3status"
bindsym Control+Mod1+comma  exec --no-startup-id "sound-ctrl decvol ; killall -USR1 i3status"
bindsym Control+Mod1+m      exec --no-startup-id "sound-ctrl toggle ; killall -USR1 i3status"

bar {
        status_command i3status-ext 3
}

exec keepassx
exec skype
