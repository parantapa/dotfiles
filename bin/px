#!/usr/bin/env python2
"""
Evaluate a python expression: Mostly a simple calculator.
"""

from __future__ import division

import sys
from math import *

def main():
    try:
        _expr = " ".join(sys.argv[1:])
    except IndexError:
        print "Usage: px \"python expression\""
        sys.exit(1)

    _x = eval(_expr)
    print _x

if __name__ == '__main__':
    main()
