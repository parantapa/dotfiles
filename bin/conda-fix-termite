#!/bin/bash
set -x

dst="$CONDA_PREFIX/share/terminfo/x/"

src1="$HOME/.terminfo/x/xterm-termite"
src2="/usr/share/terminfo/x/xterm-termite"

if [[ -e "$src1" ]] ; then
    ln -s "$src1" "$dst"
elif [[ -e "$src2" ]] ; then
    ln -s "$src2" "$dst"
else
    echo "Failed to find terminfo for xterm-termite"
    exit 1
fi

exit 0
